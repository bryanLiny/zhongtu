/* pages/purchaseDetail/purchaseDetail.wxss */

page {
  background-color: #f2f2f2;
  font-size: 30rpx;
  color: #5b5b5b;
}
.img-swiper{
  height: 200px;
}
.img-swiper .slide-image{
  width: 100%;
  height: 100%;
}
.goodInfoBox, .priceBox {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.goodInfoBox .triangle {
  height: 180rpx;
  width: 20px;
}

.goodInfoBox .infoLeft {
  color: #fff;
  background-color: #e02e24;
  padding: 20rpx 30rpx;
  width: 60%;
  height: 140rpx;
}

.goodInfoBox .infoRight {
  color: #e02e24;
  background-color: #fdd51b;
  padding: 20rpx 30rpx;
  font-size: 32rpx;
  height: 156rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.priceBox .priceRight {
  width: 60%;
}

.goodInfoBox .infoRight, .priceBox .priceLeft {
  width: 40%;
  height: 140rpx;
}

.priceBox .priceLeft .text {
  font-size: 60rpx;
}

.priceBox .priceLeft {
  height: 45px;
  line-height: 45px;
}

.goodInfoBox .infoRight .text, .priceBox .priceRight .text {
  display: block;
}

.priceBox .priceRight .text:last-child {
  background-color: #c7271d;
  padding: 3px;
  text-align: center;
  width: 60%;
  border-radius: 5px;
}

.priceBox .priceRight .text:first-child {
  color: #f0aca9;
  font-size: 10px;
  text-decoration: line-through;
}

.goodInfoBox .infoRight .text:last-child {
  border: 2rpx solid #e02e24;
  padding: 4rpx;
  border-radius: 10rpx;
  margin-top: 10rpx;
}

.contactInfo {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 40rpx 0 40rpx 40rpx;
  margin: 20rpx 0;
}

.contactInfo .left {
  border-right: 2rpx solid #dbdbdb;
  width: 80%;
}

.contactInfo .left .contact {
  line-height: 70rpx;
  height: 70rpx;
  position: relative;
  font-size: 12px;
  display: flex;
  align-items: center;
}

.contactInfo .left .house {
  width: 13.5px;
  height: 12px;
}

.contactInfo .left .addr {
  width: 10px;
  height: 13px;
}

.contactInfo .left .text {
  margin-left: 10px;
}

.contactInfo .right {
  text-align: center;
  width: 20%;
}

.contactInfo .right .phone {
  width: 30px;
  height: 30px;
}

.menbers {
  background-color: #fff;
  padding: 30rpx 40rpx;
  margin-top: 20rpx;
}

.menbers .titleBox {
  border-bottom: 2rpx solid #f2f2f2;
  padding-bottom: 16rpx;
  color: #303030;
}

.menbers .tips .tip {
  color: #5b5b5b;
  line-height: 50rpx;
  margin-top: 20rpx;
}

.menbers .face {
  width: 47px;
  height: 47px;
  margin-right: 10px;
}

.menbers .menber {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #f2f2f2;
  color: #5c5c5c;
  font-size: 13px;
}

.menbers .faceName {
  height: 70px;
  display: flex;
  align-items: center;
}

.menbers .menber .fulldate {
  color: #979797;
}

.footer {
  border-top: 2rpx solid #f2f2f2;
  /* margin-top: 20rpx; */
  background-color: #fff;
  height: 90rpx;
  line-height: 90rpx;
}

.footer .left {
  width: 60%;
  display: inline-block;
  font-size: 28rpx;
  color: #979797;
  padding-left: 5%;
}

.footer .left text {
  color: #e02e24;
}

.footer .right {
  width: 35%;
  display: inline-block;
  background-color: #e02e24;
  color: #fff;
  text-align: center;
}

@media all and (max-width: 320px) {
  .goodInfoBox .triangle {
    height: 75px;
  }
}
