<!--pages/purchaseDetail/purchaseDetail.wxml-->
<scroll-view scroll-y="true">
  <swiper class='img-swiper' indicator-dots="{{indicatorDots}}" indicator-active-color='{{indicatorActivColor}}' autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{imgUrls}}" wx:key>
      <swiper-item>
        <image mode='aspectFit' src="{{item}}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>
  <view class='goodInfoBox'>
    <view class='infoLeft'>
      <text class='zhongchou'>众筹</text>
      <text>金钱豹子汽车摆件时钟</text>
      <view class='priceBox'>
        <view class='priceLeft'>
          ￥
          <text class='text'>9.9</text>
        </view>
        <view class='priceRight'>
          <text class='text'>原价￥89.5</text>
          <text class='text'>已售232</text>
        </view>
      </view>
    </view>
    <image class='triangle' src='{{triangleImg}}'></image>
    <view class='infoRight'>
      <text class='text'>距离结束还剩</text>
      <text class='text'>2天 09:09:32</text>
    </view>
  </view>
  <view class='shuoming'>
    <view class='tip tip1'>
      <text>众筹说明</text>
      <text bindtap='partake' class='partake'>我要参与</text>
    </view>
    <view class='tip'>请朋友代付1元抵用100元，最多可找5人付款</view>
  </view>
  <view class='menbers'>
    <view class='titleBox'>
      <text class='title'>朋友代付</text>
    </view>
    <view class='menber' wx:for="{{menbers}}" wx:key>
      <view class='faceName'>
        <image class='face' src='{{item.face}}'></image>
        <text class='text'>{{item.name}}</text>
        <text class='pay'>￥1.00</text>
      </view>
      <view class='right'>
        <text class='text'>抵</text>
        <text class='text'>100元</text>
      </view>
    </view>
  </view>
  <view class='contactInfo'>
    <view class='left'>
      <view class='contact'>
        <image class='house' src='{{house}}'></image>
        <text class='text'>众涂汽车美容（软件园二期店）</text>
      </view>
      <view class='contact'>
        <image class='addr' src='{{addr}}'></image>
        <text class='text'>厦门市湖里区软件园二期观日路24号206</text>
      </view>
    </view>
    <view data-tel="17749759443" bindtap='calling' class='right'>
      <image src='../../../images/funding/phone.png' class='phone'></image>
    </view>
  </view>
  <view class='menbers'>
    <view class='titleBox'>
      <text class='title'>消费提醒</text>
    </view>
    <view class='tips'>
      <view class='tip'>1. 有效期：2017-09-01 至2017-09-30</view>
      <view class='tip'>2. 消费者众筹后不消费，众筹金额不退还</view>
      <view class='tip'>3. 需到店消费</view>
    </view>
  </view>
  <view class='footer'>
    <view class='left'>
      立即为朋友支付
      <text>1元</text>，朋友可抵100
    </view>
    <!-- <navigator open-type='share' class='right first'>请朋友付款</navigator> -->
    <!-- <navigator url='../friendPay/friendPay?id=111' class='right first'>请朋友付款</navigator> -->
    <navigator url='../pay/pay?id=111' class='right'>立即付款</navigator>
  </view>
</scroll-view>